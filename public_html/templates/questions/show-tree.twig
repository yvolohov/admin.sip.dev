{% extends "base.twig" %}

{% block headMenu %}
    {% include "head-menu.twig" with {'activePage': '/questions/show-tree/'} only %}
{% endblock %}

{% block content %}
    <div class="grid condensed">
        <div class="row cells12">

            <div class="cell colspan3">
                {% include "questions/show-tree-level.twig" %}
            </div>

            <div class="cell colspan9">

                <div class="grid condensed">

                    <div class="row">
                        <div class="cell">
                            <a href="/question/new/" class="button small-button rounded">Создать</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="cell">
                            <table class="table hovered striped">
                                <thead>
                                <tr>
                                    <th>Ключи</th>
                                    <th>Изучаемый язык</th>
                                    <th>Базовый язык</th>
                                    <th>Строки</th>
                                    <th>Открыть</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for question in questions %}
                                    <tr>
                                        <td>{{ question.keywords }}</td>
                                        <td>{{ question.foreign_sentence }}</td>
                                        <td>{{ question.native_sentence }}</td>
                                        <td>{{ question.templates_cnt }} / {{ question.sentences_cnt }}</td>
                                        <td>
                                            <a href="/question/edit/{{ question.id }}/"
                                               class="button small-button rounded">
                                                Открыть
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}