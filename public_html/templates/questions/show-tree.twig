{% extends "base.twig" %}

{% block headMenu %}
{% include "head-menu.twig" with {'activePage': '/questions/show-tree/'} only %}
{% endblock %}

{% block content %}
<div class="grid condensed">
    <div class="row cells12">

        <div class="cell colspan3">
        {% include "questions/show-tree-level.twig" %}
        </div>

        <div class="cell colspan9">

            <div class="grid condensed">

                <div class="row">
                    <div class="cell">
                        <a href="/question/new/" class="button small-button rounded">New</a>
                    </div>
                </div>

                <div class="row">
                    <div class="cell">
                        <table class="table hovered striped">
                            <thead>
                            <tr>
                                <th>Foreign sentence</th>
                                <th>Native sentence</th>
                                <th>Templates</th>
                                <th>Sentences</th>
                                <th>Open</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for question in questions %}
                                <tr>
                                    <td>{{ question.foreign_sentence }}</td>
                                    <td>{{ question.native_sentence }}</td>
                                    <td>{{ question.templates_cnt }}</td>
                                    <td>{{ question.sentences_cnt }}</td>
                                    <td>
                                        <a href="/question/edit/{{ question.id }}/" class="button small-button rounded">
                                            Open
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}